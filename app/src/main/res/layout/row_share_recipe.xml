<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="shareRecipeRowModel" type="com.altlokaltsapplication.app.modules.sharerecipe.data.model.ShareRecipeRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylecornerRadius_1">
        <View
            android:background="@drawable/rectangle_bg_gray_300_radius_8"
            android:id="@+id/viewImage"
            android:layout_height="@dimen/_40pxh"
            android:layout_marginBottom="@dimen/_5pxv"
            android:layout_marginTop="@dimen/_5pxv" android:layout_width="@dimen/_40pxh"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearContent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_weight="0.76" android:layout_width="0dp" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtJesslynNarry"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_width="match_parent"
                android:letterSpacing="0.0"
                android:lineSpacingExtra="@dimen/_8pxh"
                android:singleLine="true"
                android:text="@{shareRecipeRowModel.txtJesslynNarry}"
                style="@style/txtPoppinsbold16_1" tools:text="@string/lbl_jesslyn_narry"/>
            <TextView android:ellipsize="end" android:id="@+id/txtEmail"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_width="match_parent"
                android:letterSpacing="0.0"
                android:lineSpacingExtra="@dimen/_8pxh"
                android:singleLine="true"
                android:text="@{shareRecipeRowModel.txtEmail}"
                style="@style/txtPoppinsregular16" tools:text="@string/msg_jesslynarry_gma"/>
        </LinearLayout>
        <ImageView android:id="@+id/imageCheckmark"
            android:layout_height="@dimen/_26pxh"
            android:layout_marginBottom="@dimen/_11pxv"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_11pxv"
            android:layout_width="@dimen/_26pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_checkmark"
            tools:ignore="ContentDescription" tools:src="@drawable/img_checkmark"/>
    </LinearLayout>
</layout>
